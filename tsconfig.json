{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "importHelpers": true,
    "incremental": true,
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/",
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": ["./src/**/*"]
}
